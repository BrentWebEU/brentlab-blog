{{!-- 
Template Name: Homepage
Description: Custom landing page with hero, featured posts, and latest content
--}}
{{!< default}}

{{!-- Hero Section - Magazine Editorial --}}
<section class="hero">
    <div class="hero__container">
        <div class="hero__content">
            <div class="hero__badge">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                Developer Blog
            </div>
            
            <h1 class="hero__title">
                {{#if @site.title}}
                    {{@site.title}}
                {{else}}
                    <span class="highlight">Brent Lab</span>
                {{/if}}
            </h1>
            
            {{#if @site.description}}
                <p class="hero__tagline">{{@site.description}}</p>
            {{else}}
                <p class="hero__tagline">Exploring code, open source, and the art of software development</p>
            {{/if}}
            
            <div class="hero__actions">
                <a href="#latest-posts" class="btn btn-primary">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                    </svg>
                    Explore Posts
                </a>
                {{#if @site.members_enabled}}
                    <a href="{{@site.url}}/subscribe/" class="btn btn-outline">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                        </svg>
                        Subscribe
                    </a>
                {{/if}}
            </div>
        </div>
    </div>
    
    {{!-- Scroll Indicator --}}
    <div class="scroll-indicator" aria-hidden="true">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 5v14M19 12l-7 7-7-7"/>
        </svg>
    </div>
</section>

{{!-- Featured Posts Section - Magazine Grid --}}
{{#get "posts" limit="3" filter="featured:true" as |featured_posts|}}
    {{#if featured_posts}}
        <section class="featured-posts">
            <div class="container">
                <div class="section-header">
                    <div>
                        <span class="eyebrow">Editor's Choice</span>
                        <h2 class="section-title">
                            <svg class="section-icon" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                            </svg>
                            Featured Posts
                        </h2>
                    </div>
                </div>
                
                <div class="featured-posts-grid">
                    {{#foreach featured_posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                </div>
            </div>
        </section>
        
        {{!-- Section Divider --}}
        <div class="section-divider">
            <div class="section-divider__line">
                <div class="section-divider__ornament">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <circle cx="12" cy="12" r="4"></circle>
                    </svg>
                </div>
            </div>
        </div>
    {{/if}}
{{/get}}

{{!-- Latest Posts Section --}}
<section class="latest-posts" id="latest-posts">
    <div class="container">
        <div class="section-header">
            <div>
                <span class="eyebrow">Recent Stories</span>
                <h2 class="section-title">Latest Posts</h2>
            </div>
            <a href="{{@site.url}}" class="section-link">
                View All Articles
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
            </a>
        </div>
        
        {{#if posts}}
            <div class="posts-grid">
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            </div>
            
            {{!-- Pagination --}}
            {{pagination}}
        {{else}}
            <div class="no-posts">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
                <h3>No posts yet</h3>
                <p>Check back soon for new content!</p>
            </div>
        {{/if}}
    </div>
</section>

{{!-- Newsletter Section (if members enabled) --}}
{{#if @site.members_enabled}}
    {{!-- Section Divider --}}
    <div class="section-divider">
        <div class="section-divider__line">
            <div class="section-divider__ornament">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
            </div>
        </div>
    </div>
    
    <section class="newsletter-section">
        <div class="container">
            <div class="newsletter-card">
                <span class="eyebrow">Newsletter</span>
                <h2 class="newsletter-title">Stay in the Loop</h2>
                <p class="newsletter-description">
                    Get the latest posts, tutorials, and insights delivered straight to your inbox. No spam, just quality content.
                </p>
                <div class="newsletter-form-wrapper">
                    <a href="{{@site.url}}/subscribe/" class="btn btn-primary btn-lg">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                        </svg>
                        Subscribe Now
                    </a>
                </div>
            </div>
        </div>
    </section>
{{/if}}
