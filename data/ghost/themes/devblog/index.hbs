{{!-- 
Template Name: Blog Archive/Listing
Description: Main blog listing page with posts grid and pagination
--}}
{{!< default}}

<div class="blog-header">
    <div class="container">
        <h1 class="blog-title">{{@site.title}}</h1>
        {{#if @site.description}}
            <p class="blog-description">{{@site.description}}</p>
        {{/if}}
    </div>
</div>

<div class="blog-content">
    <div class="container">
        {{#if posts}}
            <div class="posts-grid">
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            </div>
            
            {{!-- Pagination --}}
            <nav class="pagination" role="navigation" aria-label="Pagination">
                {{#if prev}}
                    <a href="{{page_url prev}}" class="pagination-link pagination-prev" rel="prev">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="19" y1="12" x2="5" y2="12"></line>
                            <polyline points="12 19 5 12 12 5"></polyline>
                        </svg>
                        <span>Newer Posts</span>
                    </a>
                {{/if}}
                
                <div class="pagination-info">
                    <span class="pagination-current">Page {{page}} of {{pages}}</span>
                </div>
                
                {{#if next}}
                    <a href="{{page_url next}}" class="pagination-link pagination-next" rel="next">
                        <span>Older Posts</span>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                            <polyline points="12 5 19 12 12 19"></polyline>
                        </svg>
                    </a>
                {{/if}}
            </nav>
        {{else}}
            <div class="no-posts">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
                <h2>No posts yet</h2>
                <p>Check back soon for new content!</p>
            </div>
        {{/if}}
    </div>
</div>
