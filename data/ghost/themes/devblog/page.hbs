{{!-- 
Template Name: Page
Description: Static page template
Supports @page.show_title_and_feature_image (Beta editor) - when false, title and feature image are hidden via CSS
--}}
{{!< default}}

{{#post}}
    <article class="page {{post_class}}{{#match @page.show_title_and_feature_image "=" false}} page-hide-title-and-feature-image{{/match}}">
        <header class="page-header">
            <div class="container">
                <div class="page-header-content content-width">
                    <h1 class="page-title">{{title}}</h1>
                    {{#if custom_excerpt}}
                        <p class="page-excerpt">{{custom_excerpt}}</p>
                    {{/if}}
                </div>
            </div>
        </header>
        
        <div class="page-content-wrapper">
            <div class="container">
                <div class="page-content content-width">
                    {{#if feature_image}}
                        <figure class="page-feature-image">
                            <img 
                                src="{{feature_image}}" 
                                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                loading="eager"
                            >
                        </figure>
                    {{/if}}
                    
                    {{content}}
                </div>
            </div>
        </div>
    </article>
{{/post}}
