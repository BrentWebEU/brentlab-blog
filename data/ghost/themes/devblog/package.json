{
  "name": "devblog",
  "description": "A professional yet fun custom Ghost theme for developer and Linux blogs",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=5.0.0",
    "ghost-api": "v5"
  },
  "license": "MIT",
  "author": {
    "name": "Brent Schoenmakers",
    "email": "hello@example.com"
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme",
    "developer",
    "linux",
    "blog",
    "dark-mode"
  ],
  "config": {
    "posts_per_page": 12,
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 400
      },
      "m": {
        "width": 750
      },
      "l": {
        "width": 1200
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "navigation_layout": {
        "type": "select",
        "options": ["logo-on-cover", "logo-in-middle", "stacked"],
        "default": "logo-on-cover"
      },
      "title_font": {
        "type": "select",
        "options": ["modern-sans", "elegant-serif"],
        "default": "modern-sans"
      },
      "body_font": {
        "type": "select",
        "options": ["modern-sans", "elegant-serif"],
        "default": "modern-sans"
      }
    }
  }
}
