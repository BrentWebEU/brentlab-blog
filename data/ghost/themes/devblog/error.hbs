<style>
.error-page {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-16) 0;
}

.error-content {
    text-align: center;
}

.error-terminal {
    background: var(--color-code-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin-bottom: var(--space-8);
    box-shadow: var(--shadow-xl);
}

.terminal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-3) var(--space-4);
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
}

.terminal-buttons {
    display: flex;
    gap: var(--space-2);
}

.terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.terminal-button-close {
    background: #ff5f56;
}

.terminal-button-minimize {
    background: #ffbd2e;
}

.terminal-button-maximize {
    background: #27c93f;
}

.terminal-title {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    font-weight: var(--font-weight-medium);
}

.terminal-body {
    padding: var(--space-6);
    font-family: var(--font-mono);
    font-size: var(--font-size-sm);
    text-align: left;
}

.terminal-output {
    color: var(--color-text);
    margin: 0;
    background: none;
    border: none;
    padding: 0;
}

.terminal-prompt {
    color: var(--color-linux-green);
    font-weight: var(--font-weight-bold);
}

.terminal-command {
    color: var(--color-primary);
}

.terminal-error {
    color: #e06c75;
    font-weight: var(--font-weight-bold);
}

.terminal-ascii {
    color: var(--color-primary);
    display: block;
    margin: var(--space-4) 0;
    font-weight: var(--font-weight-bold);
}

.terminal-text {
    color: var(--color-text-secondary);
    display: block;
    margin: var(--space-2) 0;
}

.terminal-list {
    display: block;
    margin: var(--space-4) 0;
}

.terminal-link {
    color: var(--color-accent);
    text-decoration: underline;
    cursor: pointer;
    transition: color var(--transition-fast);
}

.terminal-link:hover {
    color: var(--color-primary);
}

.terminal-penguin {
    color: var(--color-text-muted);
    display: block;
    margin: var(--space-6) 0;
    font-size: 0.9em;
}

.terminal-cursor {
    animation: blink 1s step-end infinite;
}

@keyframes blink {
    50% {
        opacity: 0;
    }
}

.error-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
}

@media (max-width: 767px) {
    .terminal-body {
        padding: var(--space-4);
        font-size: 0.75rem;
    }
    
    .terminal-ascii,
    .terminal-penguin {
        font-size: 0.65rem;
    }
    
    .error-actions {
        flex-direction: column;
        width: 100%;
    }
    
    .error-actions .btn {
        width: 100%;
    }
}
</style>
